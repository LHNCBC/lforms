{
  "title": "A form with enableWhen across tabs",
  "resourceType": "Questionnaire",
  "status": "draft",
  "item": [
    {
      "type": "group",
      "linkId": "baseGroup",
      "extension": [
        {
          "url": "http://hl7.org/fhir/StructureDefinition/questionnaire-itemControl",
          "valueCodeableConcept": {
            "coding": [
              {
                "system": "http://hl7.org/fhir/questionnaire-item-control",
                "code": "tab-container",
                "display": "Tab Container"
              }
            ],
            "text": "Tab Container"
          }
        }
      ],
      "item": [
        {
          "type": "group",
          "text": "Tab One",
          "linkId": "g1",
          "item": [
            {
              "linkId": "Q1",
              "text": "Q1 Boolean field",
              "type": "boolean"
            }
          ]
        },
        {
          "type": "group",
          "text": "Tab Two",
          "linkId": "g2",
          "item": [
            {
              "linkId": "Q1-exists",
              "text": "conditional field - Q1-exists (Q1 exists true)",
              "type": "string",
              "enableWhen": [
                {
                  "question": "Q1",
                  "operator": "exists",
                  "answerBoolean": true
                }
              ],
              "enableBehavior": "any"
            },
            {
              "linkId": "Q1-not-exists",
              "text": "conditional field - Q1-not-exists (Q1 exists false)",
              "type": "string",
              "enableWhen": [
                {
                  "question": "Q1",
                  "operator": "exists",
                  "answerBoolean": false
                }
              ],
              "enableBehavior": "any"
            },
            {
              "linkId": "Q1-true",
              "text": "conditional field - Q1-true (Q1 = true)",
              "type": "string",
              "enableWhen": [
                {
                  "question": "Q1",
                  "operator": "=",
                  "answerBoolean": true
                }
              ],
              "enableBehavior": "any"
            },
            {
              "linkId": "Q1-false",
              "text": "conditional field - Q1-false (Q1 = false)",
              "type": "string",
              "enableWhen": [
                {
                  "question": "Q1",
                  "operator": "=",
                  "answerBoolean": false
                }
              ],
              "enableBehavior": "any"
            },
            {
              "linkId": "Q1-not-true",
              "text": "conditional field - Q1-not-true (Q1 != true)",
              "type": "string",
              "enableWhen": [
                {
                  "question": "Q1",
                  "operator": "!=",
                  "answerBoolean": true
                }
              ],
              "enableBehavior": "any"
            }
          ]
        },
        {
          "type": "group",
          "text": "Tab Three",
          "linkId": "g3",
          "enableWhen": [
            {
              "question": "Q1",
              "operator": "=",
              "answerBoolean": true
            }
          ],
          "enableBehavior": "any",
          "item": [
            {
              "type": "string",
              "linkId": "q3",
              "text": "Contents in this tab is hidden unless Q1 is true in the first tab"
            }
          ]
        }
      ]
    }
  ]
}
